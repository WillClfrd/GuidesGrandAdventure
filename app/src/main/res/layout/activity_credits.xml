<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000C38">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rri_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rri2" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/credit_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="@font/mainfont"
            android:gravity="center"
            android:text="Credits:"
            android:textColor="#A6F2FF"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100sp">

            <FrameLayout
                android:layout_width="100sp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dev_image1"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/follower_1_left" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dev_name1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mainfont"
                    android:gravity="center"
                    android:text="Will C."
                    android:textColor="#A6F2FF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dev_title1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mainfont"
                    android:gravity="center"
                    android:text="WillClfrd"
                    android:textColor="#A6F2FF"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100sp">

            <FrameLayout
                android:layout_width="100sp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dev_image2"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/follower_5_left" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dev_name2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mainfont"
                    android:gravity="center"
                    android:text="Meagan B."
                    android:textColor="#A6F2FF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dev_title2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mainfont"
                    android:gravity="center"
                    android:text="Mea08"
                    android:textColor="#A6F2FF"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100sp">

            <FrameLayout
                android:layout_width="100sp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/dev_image3"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/follower_3_left" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dev_name3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mainfont"
                    android:gravity="center"
                    android:text="Jose G."
                    android:textColor="#A6F2FF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dev_title3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mainfont"
                    android:gravity="center"
                    android:text="Jrgg1"
                    android:textColor="#A6F2FF"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/credit_return_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#0C2E8E"
            android:fontFamily="@font/mainfont"
            android:text="Back"
            android:textColor="#A6F2FF"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>