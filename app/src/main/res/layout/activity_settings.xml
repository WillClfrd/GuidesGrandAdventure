<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000C38">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/settings_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/mainfont"
            android:text="SETTINGS"
            android:textAlignment="center"
            android:textColor="#A6F2FF"
            android:textSize="36dp" />

        <ToggleButton
            android:id="@+id/music_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#0C2E8E"
            android:fontFamily="@font/mainfont"
            android:textColor="#A6F2FF"
            android:textOff="Toggle Music"
            android:textOn="Toggle Music"
            android:textSize="20dp" />

        <ToggleButton
            android:id="@+id/sound_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#0C2E8E"
            android:fontFamily="@font/mainfont"
            android:textColor="#A6F2FF"
            android:textOff="Toggle SFX"
            android:textOn="Toggle SFX"
            android:textSize="20dp" />

        <Button
            android:id="@+id/char_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#0C2E8E"
            android:fontFamily="@font/mainfont"
            android:text="Swap Character"
            android:textColor="#A6F2FF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/settings_header2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:fontFamily="@font/mainfont"
            android:gravity="center"
            android:text="Choose Background:"
            android:textAlignment="center"
            android:textColor="#A6F2FF"
            android:textSize="16dp" />

        <HorizontalScrollView
            android:layout_width="300sp"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bkg_button1"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:alpha=".75"
                    android:backgroundTint="#036304"
                    android:fontFamily="@font/mainfont"
                    android:text="Grass"
                    android:textColor="#ACFFA6"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="15sp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/bkg_button2"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:alpha=".75"
                    android:backgroundTint="#d0c880"
                    android:fontFamily="@font/mainfont"
                    android:text="Sand"
                    android:textColor="#7A6D4D"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="15sp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/bkg_button3"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:alpha=".75"
                    android:backgroundTint="#d8e8f0"
                    android:fontFamily="@font/mainfont"
                    android:text="Snow"
                    android:textColor="#387695"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="15sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

                <Button
                    android:id="@+id/bkg_button4"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha=".75"
                    android:backgroundTint="#5878d8"
                    android:fontFamily="@font/mainfont"
                    android:text="Ocean"
                    android:textColor="#08257C"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="15sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bkg_button5"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha=".75"
                    android:backgroundTint="#b8a088"
                    android:fontFamily="@font/mainfont"
                    android:text="Cave"
                    android:textColor="#5E4B38"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="15sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bkg_button6"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha=".75"
                    android:backgroundTint="#c8c8c8"
                    android:fontFamily="@font/mainfont"
                    android:text="City"
                    android:textColor="#5C5C5C"
                    android:textSize="10sp" />

                <Space
                    android:layout_width="15sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bkg_button7"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:alpha=".75"
                    android:backgroundTint="#e08878"
                    android:fontFamily="@font/mainfont"
                    android:text="Volcano"
                    android:textColor="#752F23"
                    android:textSize="10sp" />

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/return_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="#0C2E8E"
            android:fontFamily="@font/mainfont"
            android:text="Return to Menu"
            android:textColor="#A6F2FF"
            android:textSize="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150sp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                app:srcCompat="@drawable/tgga" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                app:srcCompat="@drawable/rri" />
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>