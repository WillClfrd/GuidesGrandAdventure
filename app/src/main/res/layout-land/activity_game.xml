<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:divider="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/navy"
        android:focusedByDefault="true"
        android:forceHasOverlappingRendering="false"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:focusedByDefault="false"
            android:forceHasOverlappingRendering="false"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="0dp">

            <ImageButton
                android:id="@+id/in_game_menu_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/clear"
                android:contentDescription="@string/placeholder_string"
                app:srcCompat="@drawable/menuicon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrow_layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/up_arrow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/clear"
                android:contentDescription="@string/placeholder_string"
                app:srcCompat="@drawable/up_arrow" />

            <ImageButton
                android:id="@+id/down_arrow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/clear"
                android:contentDescription="@string/placeholder_string"
                app:srcCompat="@drawable/down_arrow" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/game_frame_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/purple_500">

        <LinearLayout
            android:id="@+id/game_view_ll"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/arrow_layout_2"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/navy"
        android:gravity="center|start"
        android:paddingStart="10dp"
        android:paddingEnd="0dp">

        <ImageButton
            android:id="@+id/left_arrow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/clear"
            android:contentDescription="@string/placeholder_string"
            app:srcCompat="@drawable/left_arrow" />

        <ImageButton
            android:id="@+id/right_arrow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/clear"
            android:contentDescription="@string/placeholder_string"
            app:srcCompat="@drawable/right_arrow" />

    </LinearLayout>

</LinearLayout>