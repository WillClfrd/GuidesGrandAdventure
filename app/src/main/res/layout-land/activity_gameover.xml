<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000C38"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/layout_background"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/gameover_banner"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/end_game_restart_game_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/score_textview"
            android:layout_width="650sp"
            android:layout_height="75sp"
            android:layout_gravity="center"
            android:fontFamily="@font/mainfont"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/placeholder_string"
            android:textColor="#83B6FF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/follower_textview"
            android:layout_width="600sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:fontFamily="@font/retro_computer_personal_use"
            android:gravity="center"
            android:text="@string/placeholder_string"
            android:textColor="#83B6FF"
            android:textSize="20sp" />

    </LinearLayout>


    <Button
        android:id="@+id/end_game_main_menu_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:backgroundTint="#0C2E8E"
        android:fontFamily="@font/mainfont"
        android:paddingEnd="20dp"
        android:text="Main Menu"
        android:textColor="#83B6FF"
        app:layout_constraintBaseline_toBaselineOf="@+id/end_game_restart_game_button"
        app:layout_constraintEnd_toStartOf="@+id/end_game_restart_game_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />


    <Button
        android:id="@+id/end_game_restart_game_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#0C2E8E"
        android:fontFamily="@font/mainfont"
        android:paddingStart="20dp"
        android:text="New Game"
        android:textColor="#83B6FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/end_game_main_menu_button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="HardcodedText,RtlSymmetry" />


</androidx.constraintlayout.widget.ConstraintLayout>